
<h1>Get Weather Information</h1>
<div class="row">
  <div class="col-md-12">
  <div class="well">

    <form class="form-inline" action='' id='weather_form'>
      <div class="form-group">
        <div class="col-sm-10">
          <input type="text" class="form-control" id="location_city" placeholder="City" name="location[city]" value="sdajflkasjdlfjsadljf">
        </div>
      </div>
       <div class="form-group">
        <div class="col-sm-10">
          <input type="text" class="form-control" id="location_country" placeholder="Country" name="location[country]" value="">
        </div>
       </div>
       <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Get Weather information</button>
        </div>
      </div>
    </form>
  </div>
  </div>
</div>
<div class="row clearfix">
  <div class="col-md-12">
    <div id="weather-container" class='well hide'>

      <div id="name" class="row">
        <label class="col-md-3">City :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="lat" class="row">
        <label class="col-md-3">Latitude :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="lon" class="row">
        <label class="col-md-3">Longitude :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="humidity" class="row">
        <label class="col-md-3">Humidity :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="pressure" class="row">
        <label class="col-md-3">Pressure :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="temp" class="row">
        <label class="col-md-3">Temp :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="temp_max" class="row">
        <label class="col-md-3">Temp_max :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="temp_min" class="row">
        <label class="col-md-3">Temp_min :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="weather" class="row">
        <label class="col-md-3">Weather :</label>
        <label class="value col-md-6"></label>
      </div>

      <div class="row">
        <label class="col-md-3">Wind :</label>
      </div>
      <div id="deg" class="row">
        <label class="col-md-3">Degree :</label>
        <label class="value col-md-6"></label>
      </div>
      <div id="speed" class="row">
        <label class="col-md-3">Speed :</label>
        <label class="value col-md-6"></label>
      </div>

    </div>
  </div>
</div>
